{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2017",
    "module": "es2020",
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "apollo/*": [
        "./apollo/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "stores/*": [
        "./stores/*"
      ],
      "utils/*": [
        "./utils/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "files": ["package.json"],
  "include": [
    "src/**/*",
    "src/externals.d.ts",
    "src/**/*.json",
    "src/**/*.png",
    "package.json"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "node_modules",
  ]
}