{
    "compilerOptions": {
      "outDir": "build",
      "rootDir": "src",
      "target": "ES2017",
      "module": "es2020",
      "jsx": "react",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "moduleResolution": "node",
      "paths": {
        "assets/*": [
          "./assets/*"
        ],
        "components/*": [
          "./components/*"
        ],
        "services/*": [
          "./services/*"
        ],
        "utils/*": [
          "./utils/*"
        ]
      },
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "./src/*",
      "./src/externals.d.ts"
    ],
    "exclude": [
      "./src/**/*.test.ts"
    ],
  }
  