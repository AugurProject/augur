{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2, {
        "SwitchCase": 1
      }
    ],
    "max-line-length": [false],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": [
      2,
      "multi-line"
    ],
    "keyword-spacing": [
      2, {}
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }
    ],
    "no-empty": [
      2, {
        "allowEmptyCatch": true
      }
    ],
    "array-bracket-spacing": [
      2,
      "never", {}
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "trailing-comma": [
      true, {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "comma-style": [
      2,
      "last"
    ],
    "space-unary-ops": [
      2, {
        "words": false,
        "nonwords": false
      }
    ],
    "no-trailing-whitespace": true,
    "comma-dangle": [
      2,
      "never"
    ],
    "brace-style": [
      2,
      "1tbs", {
        "allowSingleLine": true
      }
    ],
    "key-spacing": [
      2, {
        "afterColon": true
      }
    ],
    "eqeqeq": [2, "allow-null"],
    "no-console": false,
    "no-eval": true,
    "radix": 2,
    "comma-spacing": [2, {
      "after": true
    }],
    "interface-name": [true, "never-prefix"],
    "ordered-imports": [false],
    "no-shadowed-variable": false,
    "object-literal-sort-keys": false,
    "array-type": [true, "generic"],
    "prefer-method-signature": true
  }
}
