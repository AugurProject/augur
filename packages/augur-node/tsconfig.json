{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "watch": false,
    "declaration": true,
    "declarationDir": "definitions",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "*":  [
        "*",
        "../augur-core/typings/*"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "../augur-core/typings",
      "./node_modules/@types"
    ],
    "types": [ ]
  },
  "include": [
    "src/**/*"
  ]
}
